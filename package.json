{
  "name": "Readit",
  "version": "4.0.0",
  "description": "Master Electron Project",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:all": "electron-builder -mwl",
    "release": "electron-builder -mwl -p onTagOrDraft",
    "win-cert": "electron-builder create-self-signed-cert -p prabudhmishra"
  },
  "repository": "https://github.com/Prabudh007/electron-demo",
  "homepage": "https://github.com/Prabudh007/electron-demo",
  "keywords": [
    "Electron",
    "Demo",
    "Master Electron"
  ],
  "author": "Prabudh Mishra",
  "license": "ISC",
  "dependencies": {
    "electron-log": "^4.4.6",
    "electron-updater": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "nodemon": "^2.0.15"
  },
  "build": {
    "appId": "com.prabudh.readit",
    "copyright": "Copyright Prabudh Mishra",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "certificateFile": "private/prabudhmishra.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false,
      "publisherName": "prabudhmishra"
    },
    "nsis": {
      "oneClick": false,
      "uninstallDisplayName": "readit-uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "category": "Utility"
    }
  }
}
